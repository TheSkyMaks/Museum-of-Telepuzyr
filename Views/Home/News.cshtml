@{
    ViewData["Title"] = "News";
}

<div class="text-center">
    <h1>@ViewData["Title"]</h1>
</div>


<main role="main">
    <div class="album py-5">
        <div class="container">
            <div class="row">
                @{
                    var art = new web.Models.Arts.MockArtsData();
                    art.StartMock();
                    foreach (var imgInfo in art.imgData)
                    {
                        string link = "https://media.discordapp.net/attachments/754678835290832977/" + imgInfo.LinkOfArt;
                        <div class="">
                            <div class="card mb-4 shadow-sm">
                                <img src=@link class="width100percent" />
                                <div class="card-body">
                                    <p class="card-text text-center">@imgInfo.NameOfArt</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="btn-group">
                                            <a href=@link class="btn btn-sm btn-outline-secondary">View</a>
                                        </div>
                                        <small class="text-muted">@imgInfo.DateCreationOfArt</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</main>

