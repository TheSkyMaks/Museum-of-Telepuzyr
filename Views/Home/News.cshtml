@{
    ViewData["Title"] = "News";
}

<div class="text-center">
    <h1>@ViewData["Title"]</h1>
</div>


<main role="main">
    <div class="album py-5">
        <div class="container">
            <div class="">
                @{
                    var news = new web.Models.News.NewsNoSQL();
                    news.StartNewsNoSQL();
                    List<web.Models.News.News> imgData = news.imgData;
                    if (imgData != null)
                    {
                        foreach (var imgInfo in imgData)
                        {
                            string linkOfArt = "https://media.discordapp.net/attachments/754678835290832977/" + imgInfo.LinkOfArt;
                            string linkOfNews = "http://" + imgInfo.LinkOfNews;
                            <div>
                                <div class="card mb-4 shadow-sm">
                                    <img src=@linkOfArt class="width100percent" />
                                    <div class="card-body">
                                        <p class="text-dark text-bolder text-center">@imgInfo.NameOfNews</p>
                                        <p class="text-dark text-center">@imgInfo.DescriptionOfNews</p>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div class="btn-group">
                                                <a href=@linkOfNews class="btn btn-sm btn-outline-secondary">Details</a>
                                            </div>
                                            <small class="text-muted">@imgInfo.DateCreationOfNews</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                }
            </div>
        </div>
    </div>
</main>

